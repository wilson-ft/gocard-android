<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#373A51"
            android:paddingTop="14dp"
            android:paddingBottom="10dp"
            android:paddingHorizontal="32dp">
            <LinearLayout
                android:id="@+id/ll_menu_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_home"/>
                <ImageView
                    android:id="@+id/iv_indicator_home"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_circle_menu_indicator"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_menu_map"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_map"/>
                <ImageView
                    android:id="@+id/iv_indicator_map"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_circle_menu_indicator"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_menu_coupon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_coupon"/>
                <ImageView
                    android:id="@+id/iv_indicator_coupon"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_circle_menu_indicator"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_menu_user"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_user"/>
                <ImageView
                    android:id="@+id/iv_indicator_user"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_circle_menu_indicator"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>